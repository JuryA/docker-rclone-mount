#!/usr/bin/with-contenv sh

ps -ef | grep "cloudplow upload" | grep -v grep > /dev/null
if [ $? -eq 0 ]; then
  exit
fi

ps -ef | grep "rclone rc" | grep -v grep > /dev/null
if [ $? -eq 0 ]; then
  exit
fi

s6-setuidgid abc cloudplow upload --loglevel INFO --logfile /rclone/cloudplow.log
rclone rc --no-output vfs/refresh recursive=true
