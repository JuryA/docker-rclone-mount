#!/usr/bin/with-contenv sh

echo "Waiting rclone mount..."
while [ 0 -eq `netstat -a | grep 5572 | grep LISTEN | wc -l` ]; do
  sleep 1
done
echo "Waiting rclone mount done."

echo "Preparing mount cache..."
rclone rc --no-output vfs/refresh recursive=true
echo "Preparing mount cache done."

mount_command="mergerfs -f -o async_read=false,use_ino,allow_other,auto_cache,func.getattr=newest,category.action=all,category.create=ff $MERGERFS_LOCAL_MOUNT:$RCLONE_REMOTE_MOUNT $DATA_MOUNT"

echo "Executing mount mergerfs => $mount_command"
exec s6-setuidgid abc $mount_command
